<section class='main-page'>
  <div class='heading'>
    <div><h2 class="heading-left">All Articles</h2>
    <h3>Newest Articles at the Top - Scroll to See More</h3></div>
    <% if current_user %>
      <h3 class="heading-right"><%= link_to "Go to Favorites", user_favorites_path(current_user) %></h3>
    <% end %>
  </div>
  <div class="articles">
    <div class='article'>
      <% @presenter.articles.each do |article| %>
        <% if current_user %>
          <p><%= check_box_tag "title", (["#{article[0]}" + '-&-' + "#{article[1]}" + '-&-' + "#{article[2]}"])%><%= article[0] %></p>
        <% else %>
          <p><%= article[0] %></p>
        <% end %>
        <p><%= link_to article[1], article[2] %></p>
        <br>
      <% end %>
    </div>
  </div>

  <div class='button'>
    <% if current_user %>
      <p class="faves-button"><%= link_to "Save Favorites", user_favorites_path(current_user)%></p>
    <% end %>
  </div>
</section>


<%= javascript_include_tag "application.js" %>
<% if current_user %>
  <%= javascript_tag "var current_user_id = #{current_user.id}" %>
<% end %>
