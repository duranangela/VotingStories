<section>
  <h2 class='title'>Sign up to be a New User!</h2>

  <div class='form'>
    <%= form_for @user do |f| %>
      <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.submit "Create User" %>
      </div>
    <% end %>
  </div>
</section>
