<section>
  <h2 class='title'>Log In</h2>
  <div class='form'>
    <%= form_tag login_path do %>
      <div>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </div>
      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div>
        <%= submit_tag "User Log In" %>
      </div>
    <% end %>
  </div>
</section>
